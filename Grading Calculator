import java.util.Scanner;

public class Grade {
    //Method for solving your Yearly grade based on the 100 point grading scale
    public static void calculator(double prelims, double midterms, double final_term ){

        double twenty_percent = (prelims/100) * 20;
        double thirty_percent = (midterms/100) * 30;
        double fifty_percent = (final_term/100) * 50;
        double whole_Grade = (twenty_percent + thirty_percent + fifty_percent);
        System.out.println("Your grade for this year is: " + whole_Grade);

    }
    //Main Method
    public static void main (String[]args){
        Scanner input = new Scanner(System.in);
        System.out.println("Input your grades for prelims, midterms, and final term respectively");
        calculator(input.nextDouble(), input.nextDouble(), input.nextDouble());

    }
}
